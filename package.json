{
  "name": "matchnarrator",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm --filter api dev\" \"pnpm --filter web dev\"",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm --filter api build && pnpm --filter web build",
    "build:api": "pnpm --filter api build",
    "build:web": "pnpm --filter web build",
    "test": "pnpm --filter api test && pnpm --filter web test",
    "test:api": "pnpm --filter api test",
    "test:web": "pnpm --filter web test",
    "lint": "pnpm --filter api lint && pnpm --filter web lint",
    "prisma:migrate": "pnpm --filter api prisma:migrate",
    "prisma:studio": "pnpm --filter api prisma:studio",
    "prisma:seed": "pnpm --filter api prisma:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@prisma/client",
      "@prisma/engines",
      "bcrypt",
      "prisma",
      "unrs-resolver"
    ]
  }
}
